<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>

<BorderPane styleClass="main-container" stylesheets="@StyleGeneric.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bugboard26frontend.GUI.AssegnaIssueController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <Label styleClass="logo-text" text="BugBoard 26 " />

            <Region HBox.hgrow="ALWAYS" />

            <Button onAction="#apriDashboard" styleClass="btn-cancel" text="â† Indietro" />

            <Circle fx:id="avatarCircle" onMouseClicked="#apriMenuUtente" radius="20.0">
                <fill>
                    <ImagePattern>
                        <image>
                            <Image url="@images/logoutente.png" />
                        </image>
                    </ImagePattern>
                </fill>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <stroke>WHITE</stroke>
                <strokeWidth>1.0</strokeWidth>
            </Circle>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" styleClass="content-area">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label styleClass="page-title" text="Seleziona un Utente per l'assegnazione" />

            <TableView fx:id="tabellaUtenti" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNome" prefWidth="200" text="Nome" />
                    <TableColumn fx:id="colCognome" prefWidth="200" text="Cognome" />
                    <TableColumn fx:id="colRuolo" prefWidth="150" text="Ruolo" />

                    <TableColumn fx:id="colAzione" prefWidth="120" style="-fx-alignment: CENTER;" text="Azione" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER" spacing="5">
                <Button styleClass="pagination-btn" text="Prev" />
                <Button styleClass="pagination-btn, page-active" text="1" />
                <Button styleClass="pagination-btn" text="2" />
                <Button styleClass="pagination-btn" text="Next" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
