<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="main-container" stylesheets="@StyleGeneric.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bugboard26frontend.GUI.CreateNewUserController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Label styleClass="logo-text" text="BugBoard 26" />
        </HBox>
    </top>

    <left>
        <VBox spacing="0" styleClass="sidebar">
            <padding>
                <Insets top="20" />
            </padding>

            <Button onAction="#apriDashboard" maxWidth="Infinity" styleClass="sidebar-btn" text="â‰¡  Lista Issue" />
            <Button onAction="#apriLeMieIssue" prefHeight="40.0" prefWidth="200.0" styleClass="sidebar-btn" text="â‰¡ Le mie Issue" />
            <Button onAction="#apriCreaNuovoUtente" prefHeight="40.0" prefWidth="200.0" styleClass="sidebar-btn, active" text="ðŸ‘¤ Crea Utente" />

            <Region VBox.vgrow="ALWAYS" />
            <Region minWidth="200" />

            <Button maxWidth="Infinity" styleClass="sidebar-btn" text="âš™  Impostazioni" />
            <Button maxWidth="Infinity" styleClass="sidebar-btn" text="ðŸ’¬  Aiuto" />
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label styleClass="page-title" text="Registrazione Utente" />

            <VBox maxWidth="450.0" spacing="15.0" styleClass="form-card">

                <VBox spacing="5.0">
                    <Label styleClass="input-label" text="NOME" />
                    <TextField fx:id="nomeField" promptText="Inserisci il nome" styleClass="text-field" />
                </VBox>

                <VBox spacing="5.0">
                    <Label styleClass="input-label" text="COGNOME" />
                    <TextField fx:id="cognomeField" promptText="Inserisci il cognome" styleClass="text-field" />
                </VBox>

                <VBox spacing="5.0">
                    <Label styleClass="input-label" text="EMAIL" />
                    <TextField fx:id="emailField" promptText="nome.cognome@esempio.com" styleClass="text-field" />
                </VBox>

                <VBox spacing="5.0">
                    <Label styleClass="input-label" text="PASSWORD" />
                    <PasswordField fx:id="passwordField" promptText="********" styleClass="text-field" />
                </VBox>

                <VBox prefHeight="10.0" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <Button onAction="#tornaIndietro" styleClass="btn-cancel" text="Indietro" />
                    <Button onAction="#onCreaClick" styleClass="btn-success" text="Crea Account" />
                </HBox>

            </VBox>
        </VBox>
    </center>

</BorderPane>