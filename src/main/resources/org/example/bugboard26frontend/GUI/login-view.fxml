<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- Il VBox è un contenitore che impila gli elementi verticalmente -->

<VBox alignment="CENTER" spacing="20.0" styleClass="main-container" stylesheets="@StyleGeneric.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bugboard26frontend.GUI.LoginController">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <!-- Titolo / Logo -->
    <Label text="BugBoard 26" textFill="WHITE">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>

    <Label text="Accedi per continuare" textFill="#94a3b8" />

    <!-- Campo Email -->
    <VBox spacing="5">
        <Label styleClass="text-label" text="EMAIL" />
        <TextField fx:id="emailField" promptText="nome@esempio.com" styleClass="text-field" />
    </VBox>

    <!-- Campo Password -->
    <VBox spacing="5">
        <Label styleClass="text-label" text="PASSWORD" />
        <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="text-field" />
    </VBox>

    <!-- Messaggio di Errore (Nascosto all'inizio) -->
    <Label fx:id="errorLabel" text="Credenziali errate!" textFill="#ef4444" visible="false" />

    <!-- Bottone Login -->
    <Button maxWidth="Infinity" onAction="#onLoginClick" styleClass="btn-accedi" text="ACCEDI AL SISTEMA" textFill="WHITE" />

</VBox>
