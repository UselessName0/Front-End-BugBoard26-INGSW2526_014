<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.paint.ImagePattern?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.Cursor?>

<?import org.example.bugboard26frontend.enums.Stato?>
<BorderPane styleClass="main-container" stylesheets="@StyleGeneric.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bugboard26frontend.GUI.DashboardController">

    <!-- TOP BAR-->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
            <padding><Insets bottom="10" left="20" right="20" top="10" /></padding>

            <!-- Logo -->
            <Label styleClass="logo-text" text="BugBoard 26" />

            <!-- Filtri a Tendina -->
            <VBox spacing="2">
                <!-- Filtro Tipo -->
                <ComboBox fx:id="tipoComboBox" prefWidth="120" promptText="Filtra per tipo" styleClass="filter-combo">
                </ComboBox>

                <!-- Filtro Stato -->
                <ComboBox fx:id="statoComboBox" prefWidth="120" promptText="Filtra per stato" styleClass="filter-combo">
                </ComboBox>
            </VBox>

             <!-- ComboBox Ricerca -->
             <ComboBox fx:id="ComboBox" promptText="Issues" styleClass="search-combo">
                 <items>
                     <FXCollections fx:factory="observableArrayList">
                         <String fx:value="Issue" />
                         <String fx:value="Utente" />
                     </FXCollections>
                 </items>
             </ComboBox>

            <!-- Barra Ricerca -->
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="411.0" styleClass="search-box-container">

                <TextField fx:id="searchField" promptText="Cerca..." styleClass="search-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="ButtonCerca" styleClass="search-button" text="Cerca" />
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <!-- Bottone Create -->
            <Button onAction="#apriCreaIssue" styleClass="btn-create" text="+ Crea Issue" />

            <!-- Avatar Utente lato dx -->
            <Circle fx:id="avatarCircle" radius="20.0" onMouseClicked="#apriMenuUtente">
                <fill>
                    <ImagePattern>
                        <image>
                            <Image url="@images/logoutente.png"/>
                        </image>
                    </ImagePattern>
                </fill>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <stroke>WHITE</stroke>
                <strokeWidth>1.0</strokeWidth>
            </Circle>
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox spacing="0" styleClass="sidebar">
            <padding><Insets top="20" /></padding>

            <Button maxWidth="Infinity" styleClass="sidebar-btn, active" text="â‰¡  Lista Issue" />
            <Button onAction="#apriLeMieIssue" prefHeight="40.0" prefWidth="200.0" styleClass="sidebar-btn" text="â‰¡ Le mie Issue" />
            <Button fx:id="btnCreaUtente" onAction="#apriCreaNuovoUtente" prefHeight="40.0" prefWidth="200.0" styleClass="sidebar-btn" text="ðŸ‘¤ Crea Utente" />

            <Region VBox.vgrow="ALWAYS" />
            <Region minWidth="200" />

            <Button maxWidth="Infinity" styleClass="sidebar-btn" text="âš™  Impostazioni" />
            <Button maxWidth="Infinity" styleClass="sidebar-btn" text="ðŸ’¬  Aiuto" />
        </VBox>
    </left>

    <!-- Centro (TABELLA) -->
    <center>
        <VBox spacing="10" styleClass="content-area">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <TableView fx:id="tabellaIssue" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTitolo" prefWidth="300" text="Titolo Issue" />
                    <TableColumn fx:id="colAutore" prefWidth="150" text="Proprietario" />
                    <TableColumn fx:id="colPriorita" prefWidth="100" text="PrioritÃ " />
                    <TableColumn fx:id="colStato" prefWidth="100" text="Stato" />
                    <TableColumn fx:id="colTipo" prefWidth="100" text="Tipo" />
                    <TableColumn fx:id="colData" prefWidth="120" text="Data" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER" spacing="5">
                <Button styleClass="pagination-btn" text="Prev" />
                <Button styleClass="pagination-btn, page-active" text="1" />
                <Button styleClass="pagination-btn" text="2" />
                <Button styleClass="pagination-btn" text="Next" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
