<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="main-container" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bugboard26frontend.GUI.DashboardController">

    <!-- TOP BAR-->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
            <padding><Insets bottom="10" left="20" right="20" top="10" /></padding>

            <!-- Logo -->
            <Label styleClass="logo-text" text="BugBoard 26" />

            <!-- Filtri a Tendina -->
            <VBox spacing="2">
                <!-- FILTRO TIPO -->
                <ComboBox prefWidth="120" promptText="Filtra per tipo" styleClass="filter-combo">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Bug" />
                            <String fx:value="Feature" />
                            <String fx:value="Documentazione" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- FILTRO STATO -->
                <ComboBox prefWidth="120" promptText="Filtra per stato" styleClass="filter-combo">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="TO DO" />
                            <String fx:value="In lavorazione" />
                            <String fx:value="Chiuso" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>

             <!-- COMBOBOX RICERCA -->
             <ComboBox promptText="Issues" styleClass="search-combo">
                 <items>
                     <FXCollections fx:factory="observableArrayList">
                         <String fx:value="Issue" />
                         <String fx:value="Question" />
                     </FXCollections>
                 </items>
             </ComboBox>

            <!-- Barra Ricerca -->
            <HBox alignment="CENTER_LEFT" prefWidth="400" styleClass="search-box-container">

                <TextField promptText="Cerca..." styleClass="search-field" HBox.hgrow="ALWAYS" />
                <Button styleClass="search-button" text="Cerca" />
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <!-- Bottone Verde -->
            <Button styleClass="btn-create" text="+ Crea Issue" />

            <!-- Avatar -->
            <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-padding: 0 0 0 10;" text="ðŸ‘¤" />
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="0" styleClass="sidebar">
            <padding><Insets top="20" /></padding>

            <Button maxWidth="Infinity" styleClass="sidebar-btn, active" text="â‰¡  Lista Issue" />
            <Button maxWidth="Infinity" styleClass="sidebar-btn" text="â‰¡ Le mie Issue" />

            <Region VBox.vgrow="ALWAYS" />

            <Button maxWidth="Infinity" styleClass="sidebar-btn" text="âš™  Impostazioni" />
            <Button maxWidth="Infinity" styleClass="sidebar-btn" text="ðŸ’¬  Aiuto" />
        </VBox>
    </left>

    <!-- CENTRO (TABELLA) -->
    <center>
        <VBox spacing="10" styleClass="content-area">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

            <TableView fx:id="tabellaIssue" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTitolo" prefWidth="300" text="Titolo Issue" />
                    <TableColumn fx:id="colAutore" prefWidth="150" text="Proprietario" />
                    <TableColumn fx:id="colPriorita" prefWidth="100" text="PrioritÃ " />
                    <TableColumn fx:id="colStato" prefWidth="100" text="Stato" />
                    <TableColumn fx:id="colTipo" prefWidth="100" text="Tipo" />
                    <TableColumn fx:id="colData" prefWidth="120" text="Data" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER" spacing="5">
                <Button styleClass="pagination-btn" text="Prev" />
                <Button styleClass="pagination-btn, page-active" text="1" />
                <Button styleClass="pagination-btn" text="2" />
                <Button styleClass="pagination-btn" text="Next" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
